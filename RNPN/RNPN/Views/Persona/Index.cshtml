@model RNPN.Dominio.Persona
@{
    ViewData["Title"] = "Inicio";
}<head>
    <link rel="stylesheet" href="~/css/registro_personas.css"/>
    </head>

<div class="wow container-fluid formulario animate__animated animate__fadeInDown" data-wow-offset="0"  data-wow-iteration="1" data-wow-duration="2s" style="width:max-content;">
    @using (Html.BeginForm("Registro", "Persona", FormMethod.Post))
    {
        <i class="fas fa-sign-in-alt fa-3x"></i><h1>Registro</h1>
        <div class="linea"></div>
        <div class="form-group">
            <i style="color: blue;" class="wow animate__animated animate__heartBeat fas fa-user-tag fa-2x" azul data-wow-offset="15" data-wow-iteration="15" data-wow-duration="3s"></i>
            <label><strong>Nombre de persona:</strong></label>
            <input asp-for="NombrePersona" class="field" type="text" placeholder="Inserte nombre">
            <span asp-validation-for="NombrePersona" class="badge-danger"></span><br /><br />

            <i style="color: green;" class="wow animate__animated animate__heartBeat fas fa-sort-numeric-up fa-2x" verde data-wow-offset="15" data-wow-iteration="15" data-wow-duration="3s"></i>
            <label><strong>Edad: </strong></label>
            <input asp-for="EdadPersona" class="field" type="number" placeholder="Inserte edad">
            <span asp-validation-for="EdadPersona" class="badge-danger"></span><br /><br />

            <i style="color: red;" class="wow animate__animated animate__heartBeat fas fa-book-open fa-2x" azul data-wow-offset="15" data-wow-iteration="15" data-wow-duration="3s"></i>
            <label><strong>Descripcion:</strong></label>
            <input asp-for="DescripcionPersona" class="field" type="text" placeholder="Inserte descripcion">
            <span asp-validation-for="DescripcionPersona" class="badge-danger"></span><br /><br />

            <div class="center-content">
                <button type="submit" class="wow btn btn-green animate__animated animate__shakeX" value="" data-wow-offset="0" data-wow-iteration="2" data-wow-duration="1s"><i class="fas fa-save fa-2x"></i>&ensp;&ensp;Enviar</button>
            </div>
        </div>
    }
</div>